<style>
  .spinner {
    animation: spin 0.9s linear infinite;
  }

  .spinnerPath {
    stroke-dasharray: 176; /* Approximately 2 * 3.14159 * 28 */
    stroke-dashoffset: 176; /* Starts off at the same length as the dasharray to hide it */

    animation: animatePath 3.5s ease-in-out infinite;
  }

  @keyframes spin {
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes animatePath {
    0% {
      stroke-dashoffset: 176;
    }
    50% {
      stroke-dashoffset: 17.6; /* 10% of 176 */
    }
    100% {
      stroke-dashoffset: 176;
    }
  }
</style>

<svg class="spinner w-16 h-16 text-primary" viewBox="0 0 64 64">
  <circle class="spinnerPath" cx="32" cy="32" r="28" stroke-width="2" stroke="currentColor" stroke-linecap="round"></circle>
</svg>